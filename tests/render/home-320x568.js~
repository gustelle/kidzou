var page = new WebPage();

page.open('http://localhost:8080/', function (status) {
    if ('success' !== status) {
        console.log("Error");
    } else {
	page.viewportSize = {
	    width: 320,
	    height: 568
	};
        page.render("results/home-" + page.viewportSize.width + "x" + page.viewportSize.height + ".png");

	page.viewportSize = {
	    width: 960,
	    height: 800
	};
	page.render("results/home-" + page.viewportSize.width + "x" + page.viewportSize.height + ".png");

        phantom.exit();
    }
});

